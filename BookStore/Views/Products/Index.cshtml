@{
    var product = (List<ProductModel>)ViewData["product"];
    Layout = "_Layout";


}
<div class="container text-center">
    <h3>Available books</h3>
</div>
    <div class="row">
        @foreach (var p in product)
        {
            <div class="col-sm-4">
                <div class="card" style="width:200px; margin:5px">
                    <img class="card-img-top" src="@p.Image" alt="Card image"  width=200 height=200 >
                    <div class="card-body">
                        <div class="container text-center">
                            <h4 class="card-title">@p.Name</h4>
                            <p class="card-text">Author : @p.Author</p>
                            <p class="card-text">Price : @p.Price</p>
                            <a href="/Products/Details/@p.Id" class="btn btn-dark">Show</a>
                        </div>
                    </div>
                    </div>
                </div>
                }
        </div>
